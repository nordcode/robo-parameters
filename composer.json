{
    "name": "nordcode/robo-parameters",
    "description": "Parameter file writer for Robo task runner",
    "license": "MIT",
    "authors": [
        {
            "name": "Henning Kasch",
            "email": "henning.kasch@gmail.com"
        }
    ],
    "autoload": {
        "files": ["src/functions.php"],
        "psr-4": {
            "NordCode\\RoboParameters\\Test\\" : "test",
            "NordCode\\RoboParameters\\" : "src"
        }
    },
    "require": {
        "php": ">=7.0",
        "consolidation/robo": "^1.0"
    },
    "suggest": {
        "symfony/yaml": "Required for reading and writing YAML files",
        "vlucas/phpdotenv": "Required for reading dotenv files"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "mikey179/vfsStream": "^1.6",
        "satooshi/php-coveralls": "^1.0",
        "vlucas/phpdotenv": "^2.0"
    }
}
